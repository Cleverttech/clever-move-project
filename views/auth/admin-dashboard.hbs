<div class="dashboardWrapper d-flex" style="height: 100%">
    <div class="d-flex flex-column p-3 text-white bg-dark" style="width: 280px; height: 100%;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi me-2" width="40" height="32">
                <use xlink:href="#bootstrap"></use>
            </svg>
            <span class="fs-4">{{user.firstname}}</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="#" class="nav-link text-white active">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#home"></use>
                    </svg>
                    Schedules
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#table"></use>
                    </svg>
                    Administration
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#grid"></use>
                    </svg>
                    Settings
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#people-circle"></use>
                    </svg>
                    Customers
                </a>
            </li>
        </ul>
        <hr>
    </div>
    <div class="scheduleWrapper d-flex flex-column align-items-center bg-dark" style="width: 100%; height: 100%;">


        <h2 class="text-white">Pending Schedules</h2>
        <ul>
            {{#each schedules}}
                <li>
                    <div class="scheduleItem" style="width: 500px;">
                        <div class="card text-center">
                            <div class="card-header">
                                <h3>Schedule: {{this.user.firstname}}</h3>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Schedule Details:</h5>
                                <p class="card-text">Move date: {{this.date}}</p>

                                <p> <b>Moving From:</b> </p>
                                <p class="card-text">Street: {{this.address.street}}</p>
                                <p class="card-text">House No. : {{this.address.houseNum}}</p>
                                <p class="card-text">Zip code: {{this.address.zipCode}}</p>

                                <p> <b>Moving To:</b> </p>
                                <p class="card-text">Street: {{this.addressTo.street}}</p>
                                <p class="card-text">House No.: {{this.addressTo.houseNum}}</p>
                                <p class="card-text">Zip code: {{this.addressTo.zipCode}}</p>

                                <p class="card-text">Description: {{this.description}}</p>
                                <a href="#" class="btn btn-info">Edit</a>
                                <a href="#" class="btn btn-primary">Confirm</a>
                            </div>
                            <div class="card-footer text-muted">
                                2 days ago
                            </div>
                        </div>
                    </div>
                </li>
            {{/each}}




        </ul>
    </div>
</div>